<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/arrowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@drawable/register_top_arrow_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="791dp"
        android:layout_marginTop="64dp"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="310dp"
                android:layout_height="61dp"
                android:layout_gravity="start"
                android:layout_marginBottom="8dp"
                android:text="OTP Verification"
                android:textColor="#6A5CFF"
                android:textSize="38sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter the verification code sent to your mail."
                        android:textColor="#000000"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/otp_digit_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:hint="_"
                        android:layout_margin="17dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:background="@drawable/register_input_field_roundbox" />

                    <EditText
                        android:id="@+id/otp_digit_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:hint="_"
                        android:layout_margin="17dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:background="@drawable/register_input_field_roundbox" />

                    <EditText
                        android:id="@+id/otp_digit_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:hint="_"
                        android:layout_margin="17dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:background="@drawable/register_input_field_roundbox" />

                    <EditText
                        android:id="@+id/otp_digit_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:hint="_"
                        android:layout_margin="17dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:background="@drawable/register_input_field_roundbox" />
                </LinearLayout>



            </LinearLayout>

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>