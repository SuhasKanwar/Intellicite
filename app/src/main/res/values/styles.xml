<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/design_default_color_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">@color/design_default_color_primary</item>
        <item name="boxBackgroundColor">#F5F5F5</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#B00020</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="buttonTint">@color/design_default_color_primary</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">@drawable/radio_selector</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="elevation">4dp</item>
        <item name="rippleColor">#33FFFFFF</item>
    </style>

    <style name="CustomSpinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/design_default_color_primary</item>
    </style>
</resources>
